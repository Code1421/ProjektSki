@page
@model ProjektSki.Pages.Categories.CreateModel

@{
    ViewData["Title"] = "Tworzenie kategorii";
}

<h1>Dodawanie kategorii</h1>

<h4>Kategorie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Category.ShortName" class="control-label"></label>
                <input asp-for="Category.ShortName" class="form-control" />
                <span asp-validation-for="Category.ShortName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category.LongName" class="control-label"></label>
                <input asp-for="Category.LongName" class="form-control" />
                <span asp-validation-for="Category.LongName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Utwórz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Powrót</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
