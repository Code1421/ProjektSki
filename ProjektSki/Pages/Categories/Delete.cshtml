@page
@model ProjektSki.Pages.Categories.DeleteModel

@{
    ViewData["Title"] = "Usuwanie kategorii";
}

<h1>Usuwanie</h1>

<h3>Czy na pewno chcesz usunąć?</h3>
<div>
    <h4>Kategoria</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.ShortName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.ShortName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.LongName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.LongName)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Category.Id" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-page="./Index">Powrót</a>
    </form>
</div>
