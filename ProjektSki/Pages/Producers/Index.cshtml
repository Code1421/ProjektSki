@page
@model ProjektSki.Pages.Producers.IndexModel

@{
    ViewData["Title"] = "Producenci";
}

<h1>Lista producentów</h1>

<p>
    <a asp-page="Create">Utwórz nowego</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Producer[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Producer[0].Country)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Producer)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td>
                    <a asp-page="./Details" asp-route-id="@item.Id">Detale</a> |
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edytuj</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Usuń</a>
                </td>
            </tr>
            @foreach (var prod in item.Products)
            {
                <tr>
                    <td style="padding-left:40px">
                        @Html.DisplayFor(modelItem => prod.Name)

                    </td>
                    <td>
                    </td>
                    <td>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
