@page
@model ProjektSki.Pages.Products.DeleteModel

@{
    ViewData["Title"] = "Usuwanie produktu";
}

<h1>Usuwanie</h1>

<h3>Czy na pewno chcesz usunąć ten produkt?</h3>
<div>
    <h4>Produkt</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Producer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Producer.Id)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Product.Id" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-page="./Index">Powrót</a>
    </form>
</div>
