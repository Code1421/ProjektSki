@page
@model ProjektSki.Pages.Products.EditModel

@{
    ViewData["Title"] = "Edycja produktu";
}

<h1>Edycja</h1>

<h4>Produkt</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Product.Id" />
            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.ProducerId" class="control-label"></label>
                <select asp-for="Product.ProducerId" class="form-control" asp-items="ViewBag.ProducerId"></select>
                <span asp-validation-for="Product.ProducerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Categories[0].ShortName" class="control-label"></label>
                <select class="form-control" asp-for="categoryID">
                    @foreach (var cat in Model.Categories)
                    {
                        <option value="@cat.Id">@cat.ShortName</option>

                    }
                </select>
                <span asp-validation-for="Product.Categories[0].ShortName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Powrót</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
